.chart-select-btn{
  width:100rpx;
  height:50rpx;
  text-align: center;
  line-height: 50rpx;
}
.chart-select-btn-active{
  color: #007BFF;
}
.chart-header{
  display:flex;
  width: 686rpx;
  flex-direction: row;justify-content: space-between;
  height:80rpx;
  box-sizing: border-box;
  padding:0px 20rpx;
  line-height: 80rpx;
  color: #FFF;
  font-size: 30rpx;
  box-shadow: inset 0px -1px 0px 0px rgba(225,225,225,0.1);
}
.chartShowTxt{
  width:200rpx;overflow:hidden;text-overflow: ellipsis;white-space: nowrap;text-align: center;
}
.chart-header-select{
  display:flex;
  width:200rpx;
  justify-content: space-around;
  align-items: center;
  padding-right:20rpx;
  
}
/* 柱状图框 */
.chart-bar-box{
  height:700rpx;
  overflow-x:hidden;
  overflow-y:scroll;
  color:#fff;
  font-size:28rpx;
  display:flex;
  flex-direction: column;
  padding:10rpx 0px;
}
.chart-bar-item{
  margin:16rpx 0rpx;
  width:100%;
  height:40px;
  display:flex;
  justify-content: space-around;
  align-items: center;
}
/* 下标 */
.chart-bar-item-index{
  width:5%;
}
/* 条 宽度计算*/
.chart-bar-item-barbox{
  height:100%;
  width:70%;
  display:flex;
  flex-direction: column;
}
.chart-bar-item-barbox-bar{
  width:100%;
  height:10px;
  background-color:rgba(255,255,255,0.1);
  position:relative;
  border-radius:10px;
}
.chart-bar-item-barbox-abar{
  height:10px;
  background-color: #50dfad;
  position:absolute;
  top:0px;
  left:0px;
  border-radius:10px
}
.chart-bar-item-num{
  width: 20%;
}