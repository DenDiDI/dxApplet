@import '../../../../assets/css/common.wxss';
.a-audit-select-op{
  height: 100rpx;
  width:686rpx;
  margin:0rpx auto;
  display: flex;
  justify-content: space-between;
}
.a-audit-status-btn{
  width: 50%;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.a-audit-status{
  width: 110rpx;
  height: 56rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  text-align: center;
  font-family: SourceHanSansCN-Normal, SourceHanSansCN;
  font-weight: 400;
  background: #fff;
  color: #000;
}
.a-audit-status-active{
  background: #007BFF;
  color: #fff;
}
.a-audit-n-status{
  border-radius: 8rpx 0rpx 0rpx 8rpx;
}
.a-audit-y-status{

  border-radius: 0rpx 8rpx 8rpx 0rpx;
}
.a-audit-multiple-btn{
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.a-audit-multiple-btn view{
  width: 176rpx;
  height: 56rpx;
  border:2rpx solid #969696;
  border-radius: 32rpx;
  text-align: center;
  line-height: 56rpx;
  letter-spacing: 4rpx;
}
.a-audit-multiple-btn view:first-child{
  margin-right: 10rpx;
}
.a-audit-list{
  margin: 0rpx auto 20rpx;
  width: 686rpx;
  height: 172rpx;
  background: #1D1E25;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}
.a-audit-list-left{
  width: 100%;
  height: 100%;

}
.a-audit-list-top{
  display: flex;
  height: 50%;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.a-audit-list-top-title{
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #fff;
  padding-left:20rpx;
  letter-spacing: 4rpx;
}
.a-audit-list-bottom-title{
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #fff;
  opacity: 0.88;
  padding-left:20rpx;
  letter-spacing: 4rpx;
}
.a-audit-list-top-left{
  width:50%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}
.a-audit-list-top-time{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #fff;
  opacity: 0.8;
  letter-spacing: 2rpx;
}
.a-audit-agress-status,
.a-audit-no-agress-status,
.a-audit-no-status{
  width: 96rpx;
  height: 36rpx;
  display: inline-block;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  /* padding: 2rpx 4rpx; */
  letter-spacing: 4rpx;
  margin-left: 20rpx;
}
.a-audit-no-status{
  background: #FFAC30;
}
.a-audit-agress-status{
  background: #079F4B;
}
.a-audit-no-agress-status{
  background: #9F0707;
}