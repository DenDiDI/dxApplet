.sbg .mplacehodlerClass{
  color:#131415;
  opacity: 0.8;
  letter-spacing: 4rpx;
}
.s-code-input{
  width: 100%;
  height: 100rpx;
  position: relative; 
  background-color:#fff;
  padding:20px;
  box-sizing: border-box;
  display:flex;
  margin-bottom:20rpx;
  align-items: center;
  justify-content: space-around;
}
.s-code-smark{
  background-color: #4a4a4b;
  display: inline-block;
  position: absolute;
  top: 50%;
  left: 50%;
  /* margin-top: 30%;
  margin-left: 50%; */
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 32rpx;
  padding: 30rpx;
  border-radius: 18rpx;
  min-width: 580rpx;
  line-height: 60rpx;
  text-align: center;
  white-space:pre-wrap;
}
.s-code-scan{
  width: 220rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:  #fff;
  display: flex;
  padding:4rpx;
  flex-direction: row;
  justify-content: center;
  border-radius: 10px;
  background-color: #e55530;
}
.s-code-scan>span{
  margin-left: 10rpx;
}
button[disabled]:not([type]) { 
  background-color: #e55530; 
  color:#fff;
  }
.s-code-del{
  /* position: absolute;
  top: 0rpx;
  right: 0rpx; */
  width: 80rpx;
  height: 80rpx;
  line-height: 130rpx;
  text-align: right;
  display: flex;
  justify-content: center;
  /* box-shadow: inset 0px -1px 0px 0px #979797; */
  align-items:center;
}
.s-code-input>input{
  width: 300rpx !important;
  height: 80rpx;
  border: none !important;
  border-radius: 10rpx;
  padding-left:20rpx;
  color:#000;
  box-shadow: none !important;
}
.s-code-add-btn{
  margin: 60rpx auto;
  width: 622rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 8rpx;
  letter-spacing: 4rpx;
  color: #e55530;
  font-size: 32rpx;
  background-color: #fff;
  font-family: PingFangSC-Semibold, PingFang SC;
  /* border: 2rpx solid #979797; */
}
.s-code-add-btn image{
  width: 26rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.s-code-submit{
  width: 622rpx;
  height: 84rpx;
  /* background: #007BFF; */
  background:#e55530;
  border-radius: 8rpx;
  margin: 80rpx auto;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  letter-spacing: 6rpx;
  line-height: 84rpx;
}


/* 管理员页面 */
.a-bg{
  background-color: #2B2B31 !important;
}
.a-task{
  display: flex;
  flex-direction: row;
}
.a-task-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  width: 200rpx;
  height: 200rpx;
  background: #1D1E25;
  border-radius: 12rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.a-task-content image{
  width: 84rpx;
  height:88rpx;
  margin-bottom: 20rpx;
}