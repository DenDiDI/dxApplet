/* pages/rankAndActive/rankAndActive.wxss */
@import "../../assets/css/common.wxss";
.container{
  box-sizing: border-box;
  padding:0rpx 32rpx 120rpx 32rpx;
}
page{
  background-color:  #F8F8F8;
  position: relative;
}
.bottomBox{
  height:120rpx;
  width: 100%;
  background-color: #F8F8F8;
}
.sbg{
  /* background-color: #F8F8F8; */
  padding-top:20rpx;
}
.s-line{
  width:646rpx;
  height:1rpx;
  background-color:  #2B2B31;
  opacity: 0.1;
}
.s-list-title{
  color: #000;
  opacity: 0.8;
  font-size: 32rpx;
  height:92rpx;
  line-height: 92rpx;
  /* padding-left: 20rpx; */
  font-family: PingFang-SC-Medium, PingFang-SC;
}
.s-active-list-content{
  margin-bottom: 30rpx; 
  width: 686rpx;
  border-radius: 12rpx;
  background-color: #fff;
  display:flex;
  flex-direction: column;
  box-sizing: border-box;
  padding:20rpx;
  /* margin:20rpx auto; */
}
.s-activity-list-img{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  /* padding: 20rpx; */
  position: relative;
  box-sizing: border-box;
}
.s-activity-list-img image{
  width: 100%;
  object-fit: cover;
}



/* 业务员 */

.b-top3-rank{
  padding-top: 210rpx;
  display:flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
}
.b-top3-rank-2{
  width: 228rpx;
  height: 260rpx;
  border-top: 6rpx solid #B4D0F5;
  border-left: 6rpx solid #B4D0F5;
  border-bottom: 6rpx solid #B4D0F5;
  border-radius: 20rpx 0rpx 0rpx 0rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.top2Img{
  width: 64rpx;
  height: 58rpx;
  position: absolute;
  top:-104rpx;
  left:50%;
  transform: translate(-50%);
}
.b-top-bg{
  background-color: #fff;
}
.b-top3-rank-1{
  width: 228rpx;
  height: 300rpx;
  border: 6rpx solid #E0C8B5;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.top1Img{
  width: 64rpx;
  height: 58rpx;
  position: absolute;
  top:-104rpx;
  left:50%;
  transform: translate(-50%);
}
.b-top3-rank-image{
  position: absolute;
  width: 108rpx;
  height:108rpx;
  border-radius: 50%;
  overflow: hidden;
  top:0rpx;
  left:50%;
  transform: translate(-50%,-54rpx);

}
.b-top3-rank-image image{
  width: 100%;
  height: 100%;
}
.b-top3-rank-3{
  width: 228rpx;
  height: 240rpx;
  border-top: 6rpx solid #ECBC8C;
  border-right: 6rpx solid #ECBC8C;
  border-bottom: 6rpx solid #ECBC8C;
  border-radius: 0rpx 20rpx 0rpx 0rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.b-top3-rank-msg-name{
  color: #000;
  font-size: 32rpx;
}
.b-top3-rank-msg-num{
  color:red;
  margin: 10rpx 0rpx;
  font-size: 32rpx;
}
.b-top3-rank-msg-status{
  color: #000;
  opacity: 0.88;
  font-size: 24rpx;
}
.b-rank-list{
  width: 686rpx;
  background-color: #fff;
  /* background-color: pink; */
  border-radius: 12rpx;
  min-height:460rpx;
  padding: 20rpx;
  margin: 20rpx auto;
  box-sizing: border-box;
}
.b-rank-list-center{
  width: 686rpx;
  background-color: #ffff;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height:510rpx;
  margin: 20rpx auto;
  box-sizing: border-box;
  color: #292929;
  border:1rpx solid rgba(233, 233, 233,0.5);
  font-size: 30rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.b-rank-list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top:20rpx;
  color: #000;
}
.b-rank-list-item-msg{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #000;
}
.b-rank-list-item-img{
  width: 72rpx;
  height:72rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0rpx 20rpx;
}
.b-rank-list-item-img image{
  width: 72rpx;
  height:72rpx;

}
.b-rank-select-type{
  width:750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: 32rpx;
}
.b-rank-select-type view{
  width: 100%;
  height: 96rpx;
  text-align: center;
  line-height:96rpx;
  box-shadow:inset 0px -1rpx 0px 0px rgba(0,0,0,0.1);
}
.b-rank-select-type-cancel{
  text-align: center;
  height:190rpx;
  padding-top:20rpx;
}